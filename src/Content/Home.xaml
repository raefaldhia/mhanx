<UserControl x:Class="CSMS.Content.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSMS.Content"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:HomeDataContext/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Row="1" Mode="PrimaryMid" HorizontalAlignment="Stretch" Padding="20,20,0,0" Height="160">
            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" FontSize="24" FontFamily="Roboto" FontWeight="Bold">PT. Agniputra Jayakusuma</TextBlock>
                <TextBlock Style="{StaticResource MaterialDesignDisplay1TextBlock}" FontSize="16" FontFamily="Roboto">SHIP OWNER - OPERATORS - CHARTERS</TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</UserControl>
